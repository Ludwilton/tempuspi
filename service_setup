alias dashboard-start='sudo systemctl start dashboard.service'
alias dashboard-stop='sudo systemctl stop dashboard.service'
alias dashboard-restart='sudo systemctl restart dashboard.service'
alias dashboard-status='sudo systemctl status dashboard.service'
alias dashboard-logs='sudo journalctl -u dashboard.service -f'
alias dashboard-enable='sudo systemctl enable dashboard.service'
alias dashboard-disable='sudo systemctl disable dashboard.service'




[Unit]
Description=E-Paper Dashboard
After=network.target

[Service]
Type=simple
User=ludwig
WorkingDirectory=/home/ludwig/dashboard
ExecStart=/home/ludwig/dashboard/venv/bin/python3 main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target